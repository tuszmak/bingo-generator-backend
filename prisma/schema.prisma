generator kysely {
  provider = "prisma-kysely"

  // Optionally provide a destination directory for the generated file
  // and a filename of your choice
  output       = "../src/db"
  fileName     = "types.ts"
  // Optionally generate runtime enums to a separate file
  enumFileName = "enums.ts"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BingoTable {
  id           Int            @id @default(autoincrement())
  code         String         @unique @default(uuid())
  name         String         @default("A cool table!")
  content      String
  packDetails  PackDetails?
  TableDetails TableDetails[]
}

model PackDetails {
  likeCount    Int            @default(0)
  createdBy    String         @default("Foobar")
  createdAt    DateTime       @default(now())
  bingoTable   BingoTable     @relation(fields: [id], references: [id])
  id           Int            @id @unique
  tableDetails TableDetails[]
}

model TableDetails {
  table         BingoTable   @relation(fields: [bingoTableId], references: [id])
  detailsId     Int          @id @default(autoincrement())
  bingoTableId  Int
  uploadedBy    String
  likes         String[]
  PackDetails   PackDetails? @relation(fields: [packDetailsId], references: [id])
  packDetailsId Int?
}
